<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.finalproject.fragment.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_kanjiListFragment"
            app:destination="@id/kanjiListFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/kanjiListFragment"
        android:name="com.example.finalproject.fragment.home.KanjiListFragment"
        android:label="Kanji"
        tools:layout="@layout/fragment_kanji_list" >
        <action
            android:id="@+id/action_kanjiListFragment_to_heisigFragment"
            app:destination="@id/heisigFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/heisigFragment"
        android:name="com.example.finalproject.fragment.home.HeisigFragment"
        android:label="fragment_heisig"
        tools:layout="@layout/fragment_heisig" >
        <argument
            android:name="selectedHeisig"
            app:argType="com.example.finalproject.data_kanji.Kanji" />
    </fragment>
</navigation>