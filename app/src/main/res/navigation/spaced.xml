<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/spaced"
    app:startDestination="@id/spacedFragment">

    <fragment
        android:id="@+id/spacedFragment"
        android:name="com.example.finalproject.fragment.spaced.SpacedFragment"
        android:label="Spaced Repetition"
        tools:layout="@layout/fragment_spaced" >
        <action
            android:id="@+id/action_spacedFragment_to_quizFragment"
            app:destination="@id/quizFragment"
            app:enterAnim="@android:anim/fade_in" />
    </fragment>
    <fragment
        android:id="@+id/quizFragment"
        android:name="com.example.finalproject.fragment.spaced.QuizFragment"
        android:label="fragment_quiz"
        tools:layout="@layout/fragment_quiz" >
        <argument
            android:name="quizKanji"
            app:argType="com.example.finalproject.roomdatabase.roomentity.SpacedEntity[]" />
        <action
            android:id="@+id/action_quizFragment_to_resultFragment"
            app:destination="@id/resultFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popUpTo="@id/spacedFragment" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.finalproject.fragment.spaced.ResultFragment"
        android:label="fragment_result"
        tools:layout="@layout/fragment_result">
        <argument
            android:name="correct"
            app:argType="com.example.finalproject.roomdatabase.roomentity.SpacedEntity[]"
            app:nullable="true" />
        <argument
            android:name="wrong"
            app:argType="com.example.finalproject.roomdatabase.roomentity.SpacedEntity[]"
            app:nullable="true" />
    </fragment>
</navigation>